<%= simple_form_for([project, ticket]) do |f| %>
<% if ticket.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(ticket.errors.count, "mistake") %>
      prohibited this project from being saved:
    </h2>

    <ul>
      <% ticket.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= f.input :name %>
<%= f.input :description %>

<%= f.button :submit %>

<% end %>
